def get_artist(artist_id: str, token: str):
    headers = {"Authorization": f"Bearer {token}"}
    url = f"https://api.spotify.com/v1/artists/{artist_id}"
    r = requests.get(url, headers=headers, timeout=15)
    r.raise_for_status()
    return r.json()

