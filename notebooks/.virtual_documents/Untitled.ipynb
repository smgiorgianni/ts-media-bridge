def search_nyt_taylor_swift(api_key: str, page: int = 0):
    params = {
        "q": "Taylor Swift",
        "api-key": api_key,
        "page": page,  
    }
    r = requests.get(NYT_BASE_URL, params=params, timeout=15)
    r.raise_for_status()
    return r.json()


